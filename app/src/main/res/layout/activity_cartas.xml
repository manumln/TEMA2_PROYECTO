<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartasActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vaso" />

    <ImageView
        android:id="@+id/imagviewCard1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/imagviewCard2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toEndOf="@+id/imagviewCard1"
        app:layout_constraintTop_toBottomOf="@+id/imagviewCard1"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/imagviewCard3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@+id/imagviewCard2"
        app:layout_constraintTop_toBottomOf="@+id/imagviewCard2"
        app:srcCompat="@drawable/card_back" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/purple"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagviewCard3" />

</androidx.constraintlayout.widget.ConstraintLayout>
